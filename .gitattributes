# ==========================
# Git Attributes for Blitz Client
# ==========================

# Set default behavior to automatically normalize line endings
* text=auto

# Treat these files as binary (no text processing)
*.jar binary
*.zip binary
*.exe binary
*.dll binary
*.so binary
*.png binary
*.jpg binary
*.gif binary
*.svg binary
*.ico binary

# Treat these files as text and normalize line endings
*.java text
*.json text
*.xml text
*.md text
*.properties text
*.yml text
*.yaml text
*.css text
*.scss text
*.js text
*.html text
*.txt text

# Define custom merge strategies for specific file types
*.lock merge=ours                # Keep current branch's lock files
*.json merge=json_merge_strategy  # Custom merge strategy for JSON files
*.yml merge=yml_merge_strategy    # Custom merge strategy for YAML files

# Exclude certain files from exports
*.class export-ignore
*.log export-ignore
*.tmp export-ignore
*.cache export-ignore
*.DS_Store export-ignore
*.idea export-ignore
*.vscode export-ignore

# Define custom attributes for code quality tools
*.java linguist-language=Java
*.json linguist-language=JSON
*.md linguist-language=Markdown
*.yml linguist-language=YAML
*.yaml linguist-language=YAML
*.css linguist-language=CSS
*.scss linguist-language=SCSS
*.js linguist-language=JavaScript
*.html linguist-language=HTML
*.txt linguist-language=Text

# Custom merge strategies for specific file types
# These can be implemented as merge drivers if defined in your .git/config
# For example, create a 'json_merge_strategy' in .git/config
# [merge "json_merge_strategy"]
#     name = "JSON merge driver"
#     driver = python json_merge_script.py %O %A %B

# Custom settings for IDE-specific files (if needed)
# You can ignore files generated by your IDEs to keep the repo clean
*.iml export-ignore
*.sublime-workspace export-ignore

# Custom diff drivers for specific file types
# [diff "json"]
#     command = json_diff_tool

# Advanced settings for diffing binary files
*.zip diff=zip
*.jar diff=jar

# End of .gitattributes
